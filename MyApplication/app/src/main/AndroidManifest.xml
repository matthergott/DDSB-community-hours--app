<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mhergott.ddsbcommunityhours" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ignite_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddNewLog"
            android:label="@string/title_activity_add_new_log"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mhergott.ddsbcommunityhours.MainActivity" />
        </activity>
        <activity
            android:name=".getSingleActivityInfo"
            android:label="@string/title_activity_get_single_activity_info"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mhergott.ddsbcommunityhours.AddNewLog" />
        </activity>
        <activity
            android:name=".AddPersonalInfo"
            android:label="@string/title_activity_add_personal_info"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mhergott.ddsbcommunityhours.MainActivity" />
        </activity>
        <activity
            android:name=".EventDetails"
            android:label="@string/title_activity_event_details"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mhergott.ddsbcommunityhours.MainActivity" />
        </activity>
    </application>

</manifest>
