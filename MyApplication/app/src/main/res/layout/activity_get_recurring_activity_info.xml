<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mhergott.ddsbcommunityhours.GetRecurringActivityInfo">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/name_recur"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:ellipsize="end"
            android:nextFocusForward="@+id/description_recur"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:hint="Name of Event" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/filler1"
            android:layout_weight="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:id="@+id/description_recur"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:nextFocusForward="@+id/organisation_recur"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:hint="Short Description" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/filler2"
            android:layout_weight="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:id="@+id/organisation_recur"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:nextFocusForward="@+id/submit_recur"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:hint="Organization" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/filler3"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/submit_recur"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1" />
    </TableLayout>

</RelativeLayout>
